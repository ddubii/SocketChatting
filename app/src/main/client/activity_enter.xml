<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7E600"
    tools:context=".EnterActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:src="@drawable/talk">
    </ImageView>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/serverIP"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#ffffff"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:hint="접속할 IP" />

        <EditText
            android:id="@+id/portNum"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#ffffff"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:hint="접속할 Port" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#ffffff"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:hint="Enter your name" />

        <Button
            android:id="@+id/enterButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:backgroundTint="#3A1D1D"
            android:textColor="#ffffff"
            android:text="입장하기"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#3A1D1D"
        android:text="1915179 김한비 and 2013715 김주은"/>

</LinearLayout>